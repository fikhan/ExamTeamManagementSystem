
@{
    ViewBag.Title = "LogisticsHomePage";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<style>


    div.IssueSel {
        border-style: solid;
        border-color: dodgerblue;
    }
    .button {
        background-color: #008CBA; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

    .but1 {
        height: 50px;
        width: 200px;
    }
</style>

<script language="javascript" type="text/javascript">

    window.history.forward();
</script>

@if (Session["UserName"] != null)
{

    @section Logisticshomeselection{

        <table style="width:100%;">
            <tr>
                <td>
                    &nbsp;
                    <div class="IssueSel">
                        <h2>Select an option below</h2>
                        <table style="width:20%;">
                            <tr><td><input style="height:50px;width:200px" id="Button1" type="button" class="button" onclick="location.href='/LogisticsSupportTeam/BuildingSelectionPageLog'" value="Create New Issue" /></td></tr>
                            <tr><td><input style="height:50px;width:200px" id="Button2" type="button" class="button" onclick="location.href='/LogisticsSupportTeam/LogisticsIssuePage'" value="Issues Inquiry" /></td></tr>
                            <tr>
                                <td><input id="Button3" type="button" class="button" onclick="location.href='@Url.Action("LogOutAction", "ExamTeam")'" value="LogOut" /></td>
                            </tr>
                        </table>
                    </div>
                </td>
            </tr>
        </table>
    }
}
else
{
    < h2 > User Logged Out</ h2 >
}

