
@{
    ViewBag.Title = "LogisticsIssuePage";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script language="javascript" type="text/javascript">

    window.history.forward();
    $(document).ready(function () {
        $('#myTable').dataTable({
            pageLength: 5,
        });
    });
</script>

@if (Session["UserName"] != null)
{


    @section LogisticsIssuesList {

        <style>
            .centered {
                position: fixed;
                top: 40%;
                left: 50%;
                /* bring your own prefixes */
                /* transform: translate(-50%, -50%);*/
            }

            div.IssueSel {
                border-style: solid;
                border-color: dodgerblue;
            }

            table {
                table-layout: fixed;
            }

            td {
                word-wrap: break-word; 
            }

            th {
                word-wrap: break-word;
                font-size: 10px;
            }
            .button {
                background-color: #008CBA; /* Green */
                border: none;
                color: white;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
            }

            .but1 {
                height: 50px;
                width: 200px;
            }
        </style>

        <h2>Logistics Issue Status</h2>
        
            <table id="myTable" class="table table-bordered table-striped" style="width: 270%;" border="1">
        
        <thead><tr><th>Issue ID</th><th>Building</th><th>Lab No</th><th>PC No</th><th>Problem Type</th><th>Date</th><th>Recieved Time</th><th>Priority</th><th>Status</th><th>Comments</th><th>Action</th></tr></thead>
        @foreach (var std in ViewData["LogIssues"] as IList<ExamTeamManagementSystem.Models.LogisticsIssue>)
        {
            <tr><td>@std.LogisticsIssueID</td><td>@std.BuildingNo</td><td>@std.LabNo</td><td>@std.PCNo</td><td>@std.ProblemType</td><td>@std.Date_Log</td><td>@std.Time_Log</td><td>@std.Priority</td><td>@std.Status</td><td>@std.Comments</td><td><input id="Button1" type="button" onclick="location.href='@Url.Action("LogisticsissueUpdate", "LogisticsSupportTeam", new { id = std.LogisticsIssueID })'" value="Action" /></td></tr>
        }
        </table>

        <table style="width:100%;">
            <tr>
                <td>
                    &nbsp;
                    <div class="IssueSel form-group">

                        <table style="width:20%;">
                            <tr><td><input id="Button1" type="button" class="button but1" onclick="location.href='/LogisticsSupportTeam/LogisticsHomePage'" value="Back" /></td></tr>
                            <tr>
                                <td><input id="Button3" type="button" class="button but1" onclick="location.href='@Url.Action("LogOutAction", "ExamTeam")'" value="LogOut" /></td>
                            </tr>
                        </table>
                    </div>
                </td>
            </tr>
        </table>

    }
}
else
{
    < h2 > User Logged Out</ h2 >
}
