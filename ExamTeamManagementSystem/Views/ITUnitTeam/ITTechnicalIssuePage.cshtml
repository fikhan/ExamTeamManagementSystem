
@{
    ViewBag.Title = "ITTechnicalIssuePage";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script language="javascript" type="text/javascript">

    window.history.forward();
    $(document).ready(function () {
        $('#myTable').dataTable({
            pageLength: 5,
        });
    });
</script>

@if (Session["UserName"] != null)
{

    @section TechnicalIssuesList {

        <style>
            .centered {
                position: fixed;
                top: 40%;
                left: 50%;
                /* bring your own prefixes */
                /* transform: translate(-50%, -50%);*/
            }

            table {
                table-layout: fixed;
            }

            td {
                word-wrap: break-word;
            }

            th {
                word-wrap: break-word;
                font-size: 10px;
            }
        </style>

        <h2>Technical Issue Status</h2>
       
            <table id="myTable" class="table table-bordered table-striped" style="width: 270%" border="1">
                <thead><tr><th>Issue ID</th><th>Building</th><th>Lab No</th><th>PC No</th><th>Problem Type</th><th>Date</th><th>Recieved Time</th><th>Priority</th><th>Status</th><th>Comments</th><th>Action</th></tr></thead>
                @foreach (var std in ViewData["TechIssues"] as IList<ExamTeamManagementSystem.Models.TechnicalIssue>)
                {
                    <tr><td>@std.TechnicalIssueID</td><td>@std.BuildingNo</td><td>@std.LabNo</td><td>@std.PCNo</td><td>@std.ProblemType</td><td>@std.Date_Tech</td><td>@std.Time_Tech</td><td>@std.Priority</td><td>@std.Status</td><td>@std.Comments</td><td><input id="Button1" type="button" onclick="location.href='@Url.Action("ITTechnicalissueUpdate", "ITUnitTeam", new { id = std.TechnicalIssueID })'" value="Action" /></td></tr>
                }
            </table>
     
            <table style="width:100%;">
                <tr>
                    <td>
                        &nbsp;
                        <div class="IssueSel form-group">

                            <table style="width:20%;">
                                <tr><td><input id="Button1" type="button" onclick="location.href='/ITUnitTeam/ITHomePage'" value="Back" /></td></tr>
                                <tr>
                                    <td><input id="Button3" type="button" onclick="location.href='@Url.Action("LogOutAction", "ExamTeam")'" value="LogOut" /></td>
                                </tr>
                            </table>
                        </div>
                    </td>
                </tr>
            </table>


    }
}
else
{
    < h2 > User Logged Out</ h2 >
}
