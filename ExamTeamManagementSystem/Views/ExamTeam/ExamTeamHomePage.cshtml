            <tr><td><input id="Button1" type="button" value="button" /></td><td><input id="Button1" type="button" value="button" /></td><td><input id="Button1" type="button" value="button" /></td></tr>
            <tr><td><input id="Button1" type="button" value="button" /></td><td><input id="Button1" type="button" value="button" /></td><td><input id="Button1" type="button" value="button" /></td></tr>
            <tr><td><input id="Button1" type="button" value="button" /></td><td><input id="Button1" type="button" value="button" /></td><td><input id="Button1" type="button" value="button" /></td></tr>
        </table> -->

        <table style="width:100%;">
            <tr>
                <td>
                    &nbsp;
                    <div class="IssueSel form-group">

                        <table style="width:20%;">
                            <tr><td><input id="Button3" type="button" onclick="location.href='/ExamTeam/IssuePage'" value="Go To Issue Page" /></td></tr>
                            <tr><td><input id="Button3" type="button" onclick="location.href='@Url.Action("LogOutAction", "ExamTeam")'" value="LogOut" /></td></tr>
                        </table>
                    </div>
                </td>
            </tr>
        </table>



    }
}
else
{
    <h2>User Logged Out</h2>
}
