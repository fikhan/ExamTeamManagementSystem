@if (Session["UserName"] != null)
{
    @section ExamTeamHomePage{



        <style>
            div.IssueSel {
                border-style: solid;
                border-color: dodgerblue;
            }

            .button {
                background-color: #008CBA; /* Green */
                border: none;
                color: white;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
            }

            #mydiv {
                border: solid;
                border-color: dodgerblue;
            }
            /* table {
                  table-layout: fixed;
              } */
            /* #myTable {
                  table-layout: fixed;
              }

                  #myTable td {
                      text-overflow: ellipsis;
                  }
            */
        </style>
        <h2>Search Student</h2>
        <div id="mydiv">
            <button class="button" onclick="location.href='/ExamTeam/StudentSearch'">Search Student</button>
        </div>
        <div id="mydiv">
        <button class="button" onclick="location.href='/ExamTeam/FileUpload'">Upload File</button>
        </div>
        <h2>Technical Issue Status</h2>

        <table id="myTable" class="table table-bordered table-striped" style="width: 100%" border="1">
            <thead style="width:100%"><tr><th>Issue ID</th><th>Building</th><th>Lab No</th><th>PC No</th><th>Problem Type</th><th>Date</th><th>Recieved Time</th><th>Priority</th><th>Status</th><th>Comments</th></tr></thead>
            <tbody>
                @foreach (var std in ViewData["TechIssues"] as IList<ExamTeamManagementSystem.Models.TechnicalIssue>)
                {
                    <tr><td>@std.TechnicalIssueID</td><td>@std.BuildingNo</td><td>@std.LabNo</td><td>@std.PCNo</td><td>@std.ProblemType</td><td>@std.Date_Tech</td><td>@std.Time_Tech</td><td>@std.Priority</td><td>@std.Status</td><td>@std.Comments</td></tr>
                }
            </tbody>
        </table>


        <h2>Logistics Issue Status</h2>
        <table id="myTable1" class="table table-striped" style="width:100%" border="1">
            <thead><tr><th>Issue ID</th><th>Building</th><th>Lab No</th><th>PC No</th><th>Problem Type</th><th>Date</th><th>Recieved Time</th><th>Priority</th><th>Status</th><th>Comments</th></tr></thead>
            <tbody>
                @foreach (var std in ViewData["LogIssues"] as IList<ExamTeamManagementSystem.Models.LogisticsIssue>)
                {
                    <tr><td>@std.LogisticsIssueID</td><td>@std.BuildingNo</td><td>@std.LabNo</td><td>@std.PCNo</td><td>@std.ProblemType</td><td>@std.Date_Log</td><td>@std.Time_Log</td><td>@std.Priority</td><td>@std.Status</td><td>@std.Comments</td></tr>
                }
            </tbody>
        </table>


