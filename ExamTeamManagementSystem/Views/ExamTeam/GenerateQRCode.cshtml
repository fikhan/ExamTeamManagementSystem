
@{
    ViewBag.Title = "GenerateQRCode";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<!-- <h2>GenerateQRCode</h2> -->

@if (Session["UserName"] != null)
{
    <style>
        #mydiv {
            border-style: solid;
            border: 2px solid dodgerblue;
            border-radius: 5px;
        }

        div.IssueSel {
            border-style: solid;
            border: 2px solid dodgerblue;
            border-radius: 5px;
        }

        .well {
            width: 280px;
            height: 30px;
            background-color: lightblue;
            animation-name: example;
            animation-duration: 4s;
            border: 2px solid dodgerblue;
            border-radius: 5px;
        }

        .transform {
            -webkit-transition: all 2s ease;
            -moz-transition: all 2s ease;
            -o-transition: all 2s ease;
            // -ms-transition: all 2s ease;
            transition: all 2s ease;
        }

        .transform-active {
            background-color: lightblue;
        }

        .changecolor {
            animation-name: example;
            animation-duration: 4s;
        }

        .htransform {
            text-align: center;
        }

        @@keyframes example {
            from {
                background-color: dodgerblue;
            }

            to {
                background-color: lightblue;
            }
        }

        .button {
            background-color: #008CBA; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .button {
            height: 50px;
            width: 150px;
        }
    </style>
    @section GenerateQRCode{
        @using (Html.BeginForm("GenerateQRCode1", "ExamTeam", FormMethod.Post))
        {
            <!--<form id="form1" runat="server" action="~/GenerateQRCode" method="post"> -->
            <div class="container">
                <h2>Generate QR Code </h2>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label>Enter Text</label>
                            <div class="input-group">
                                <input type="text" name="txtQRCode" class="form-control" value="@ViewBag.txtQRCode" />
                                <div class="input-group-prepend">
                                    <button class="button" type="submit">Generte QR</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @if (ViewBag.imageBytes != null)
                {
                    <img width="200" height="200" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(ViewBag.imageBytes))" />
                }

            </div>
            <!--</form>-->
            <table style="width:100%;">
                <tr>
                    <td>
                        &nbsp;
                        <div class="IssueSel form-group">

                            <table style="width:20%;">
                                <tr><td><input id="Button3" type="button" class="button" onclick="location.href='/ExamTeam/ExamTeamHomePage'" value="Go To Home Page" /></td></tr>
                                <tr><td><input id="Button3" type="button" class="button" onclick="location.href='@Url.Action("LogOutAction", "ExamTeam")'" value="LogOut" /></td></tr>
                            </table>
                        </div>
                    </td>
                </tr>
            </table>
        }

    }
}
else
{
    <h2>User Logged Out</h2>
}