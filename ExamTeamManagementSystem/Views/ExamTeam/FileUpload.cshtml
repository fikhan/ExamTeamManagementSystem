
@{
    ViewBag.Title = "FileUpload";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section FileUpload
{

    <style>
        .centered {
            position: fixed;
            top: 33%;
            left: 50%;
            /* bring your own prefixes */
            transform: translate(-50%, -50%);
        }

        div.IssueSel {
            border-style: solid;
            border-color: #b3d7ff;
        }
        #mydiv {
            border: solid;
            border-color: dodgerblue;
        }
        .button {
            background-color: #008CBA; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        /*.button {
            height: 50px;
            width: 150px;
        }*/
    </style>
    @using (Html.BeginForm("UploadExcel", "ExamTeam", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
    {
        <div class="control-label col-md-2"><h2>FileUpload</h2></div>
        <div id="mydiv">

            <!--<div class="form-horizontal">
                <div class="form-group">
                    <div class="control-label col-md-2">Download Format:</div>
                    <div class="col-md-10">
                        <a href="/User/DownloadExcel/"><img src="~/excel.ico" width="25" height="25" title="Download Excel format" alt="excel" /></a>
                    </div>
                </div> -->


            <div class="form-group">

                
                <div class="col-md-10">
                    <input type="file" id="FileUpload" name="FileUpload" class="" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="button" value="Upload" id="btnSubmit" class="btn btn-primary" />

                </div>
            </div>
        </div>

    }

    <table style="width:100%;">
        <tr>
            <td>
                &nbsp;
                <div class="IssueSel form-group">

                    <table style="width:20%;">
                        <tr><td><input id="Button3" type="button" class="button" onclick="location.href='/ExamTeam/IssuePage'" value="Go To Issue Page" /></td></tr>
                        <tr><td><input id="Button3" type="button" class="button" onclick="location.href='@Url.Action("LogOutAction", "ExamTeam")'" value="LogOut" /></td></tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
}

